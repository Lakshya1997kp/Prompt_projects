        // }

        // setInterval(createLeaf, 300);

        // Animation for search bar
        const animationElement = document.getElementById('search-animation');
        const text = "Ask me anything, ultimate guide!! ";
        let index = 0;
        let deleting = false;
        let isAnimating = true;

        function updateAnimation() {
            if (!isAnimating) return;

            if (deleting) {
                index--;
                if (index < 0) {
                    deleting = false;
                    index = 0;
                }
            } else {
                index++;
                if (index > text.length) {
                    deleting = true;
                    index = text.length;
                }
            }
            animationElement.textContent = text.substring(0, index);
            setTimeout(updateAnimation, deleting ? 50 : 150);
        }

        updateAnimation();

        document.querySelector('.search-bar').addEventListener('focus', function() {
            isAnimating = false;
            animationElement.textContent = '';
        });

        document.querySelector('.search-bar').addEventListener('blur', function() {
            isAnimating = true;
            updateAnimation();
        });
    </script>
