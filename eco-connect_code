    <script>
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function() {
                const menu = this.querySelector('.nav-menu');
                const isVisible = menu.style.display === 'block';
                
                // Hide all menus except trending
                document.querySelectorAll('.nav-menu').forEach(m => {
                    if (m.parentElement.id !== 'trending-nav') {
                        m.style.display = 'none';
                    }
                });

                // Toggle the clicked menu if it's not trending
                if (this.id !== 'trending-nav') {
                    menu.style.display = isVisible ? 'none' : 'block';
                }
            });
        });

        document.querySelectorAll('.nav-menu-item').forEach(item => {
            item.addEventListener('click', function(e) {
                e.stopPropagation();
                alert('Navigating to ' + this.textContent + ' section');
            });
        });

        document.querySelectorAll('.top-nav-item').forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                alert('Navigating to ' + this.textContent + ' page');
            });
        });

        // // Create falling leaves
        // function createLeaf() {
